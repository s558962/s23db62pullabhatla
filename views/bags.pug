extends layout

block content
  h1= title
  -let items = results
  button.btn( class="btn-success ml-1", onclick= `dispatch(\"/bags/create?\")`) Create
  div(class="container-fluid")
   div(class="row m-1")
    each item in items
      - let destination = `dispatch(\"/bags/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.bags_name}(#{item.bags_type}) is #{item.bags_cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-info ml-1", onclick= `dispatch(\"/bags/detail?id=${item._id}\")`) Detail
        button.btn( class="btn-secondary ml-1", onclick= `dispatch(\"/bags/delete?id=${item._id}\")`) Delete

  script.
    function dispatch(path){
     window.location.href=path
    }